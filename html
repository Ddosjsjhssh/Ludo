    <script>
        // Yahaan JavaScript code aayega jo 'Send Table' button click hone par 
        // data wapas Telegram bot ko bhejega.
        function sendData() {
            const amount = document.getElementById('amount').value;
            // Agar Telegram WebApp object available hai toh data bhejo
            if (window.Telegram.WebApp) {
                // Telegram.WebApp.sendData(JSON.stringify({ amount: amount, type: 'full' }));
                alert('Request Bheji Gayi: ' + amount);
                window.Telegram.WebApp.close();
            } else {
                alert('Development Mode: ' + amount);
            }
        }
    </script>
    
